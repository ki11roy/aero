<h1>Listing airlines</h1>
<%= will_paginate @airlines %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<tr>
        <td><%= link_to_sorted 'Id', :lid %></td>
        <td><%= link_to_sorted 'Name', :name %></td>
        <td><%= link_to_sorted 'Alias', :alias %></td>
        <td><%= link_to_sorted 'IATA', :iata %></td>
        <td><%= link_to_sorted 'ICAO', :icao %></td>
        <td><%= link_to_sorted 'Callsign', :callsign %></td>
        <td><%= link_to_sorted 'Country', :country %></td>
        <td><%= link_to_sorted 'Active', :active %></td>
	</tr>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.lid %></td>
        <td><%= airline.name %></td>
        <td><%= airline.alias %></td>
        <td><%= airline.iata %></td>
        <td><%= airline.icao %></td>
        <td><%= airline.callsign %></td>
        <td><%= airline.country %></td>
        <td><%= airline.active %></td>
        <td><%= link_to 'Show', airline %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

